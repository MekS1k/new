{
  "version": 2,
  "builds": [
    { "src": "frontend/**", "use": "@vercel/static" },
    { "src": "backend/**", "use": "npm", "config": { "maxLambdaSize": "50mb" } }
  ],
  "routes": [
    { "src": "/api/.*", "dest": "backend/index.js" },
    { "src": "/(.*)", "dest": "frontend/$1" }
  ]
}
